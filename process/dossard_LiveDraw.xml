			<textctrl col_start="6" align="left" name="an" />
			<textctrl col_start="7" align="left" name="nation" />
			<textctrl col_start="8" align="left" name="ecsl_points" />
			<textctrl col_start="9" align="left" name="ecsl_rank" />
