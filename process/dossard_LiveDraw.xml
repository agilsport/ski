			<textctrl row="auto" col_start="1" align="left" name="code"/>
			<textctrl col_start="2" align="left" name="groupe"/>
			<textctrl col_start="3" align="left" name="nom" />
			<textctrl col_start="4" align="left" name="prenom" />
