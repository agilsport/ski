			<textctrl col_start="10" align="left" name="classement" />
			<button col_start="11" align="left" name="ajouter" label="Ajouter"/>
			<row value="10px"/>
			<staticbox row_start="1" row_end="0" col_start="1" col_end="0" label="Recherche de coureur"/>
