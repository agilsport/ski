      <col value="1+50px,1,4,4,1,1,1,4,1,1,1,1"/>
      <wndtext row="30px" col_start="1" align="center">
        <background mode="solid" color="ltgray"/>'Code_FIS' </wndtext>
      <wndtext col_start="2" align="center">
        <background mode="solid" color="ltgray"/>'Groupe' </wndtext>
      <wndtext col_start="3" align="center">
        <background mode="solid" color="ltgray"/>'Nom' </wndtext>
      <wndtext col_start="4" align="center">
        <background mode="solid" color="ltgray"/>'Prenom' </wndtext>
      <wndtext col_start="5" align="center">
        <background mode="solid" color="ltgray"/>'Année' </wndtext>
      <wndtext col_start="6" align="center">
        <background mode="solid" color="ltgray"/>'Nation' </wndtext>
      <wndtext col_start="7" align="center">
        <background mode="solid" color="ltgray"/>'Comité' </wndtext>
      <wndtext col_start="8" align="center">
        <background mode="solid" color="ltgray"/>'Club' </wndtext>
      <wndtext col_start="9" align="center">
